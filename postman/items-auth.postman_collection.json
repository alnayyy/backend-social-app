{
  "info": {
    "_postman_id": "a1b2c3d4-e5f6-7890-abcd-ef0123456789",
    "name": "Items + Dev Auth Fix",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection to test dev login (JWT) and protected Items endpoints (GET/POST)."
  },
  "item": [
    {
      "name": "Dev Login - get JWT",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"id\": 1\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/dev/login",
          "host": ["{{baseUrl}}"],
          "path": ["dev","login"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save returned token into environment variable 'jwt'",
              "if (pm.response.code === 200) {",
              "  var json = pm.response.json();",
              "  if (json.token) {",
              "    pm.environment.set('jwt', json.token);",
              "    console.log('Saved jwt to environment variable: jwt');",
              "  }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Create Item (protected)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{jwt}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Buku Pemrograman\",\n  \"description\": \"Panduan singkat NestJS dan TypeScript\"\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": {
          "raw": "{{baseUrl}}/items",
          "host": ["{{baseUrl}}"],
          "path": ["items"]
        }
      },
      "response": []
    },
    {
      "name": "List Items (protected)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/items",
          "host": ["{{baseUrl}}"],
          "path": ["items"]
        }
      },
      "response": []
    }
    ,
    {
      "name": "Update Item (protected)",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{jwt}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Updated\"\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": {
          "raw": "{{baseUrl}}/items/1",
          "host": ["{{baseUrl}}"],
          "path": ["items","1"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200 or 404', function () {",
              "  pm.expect([200, 404]).to.include(pm.response.code);",
              "});",
              "if (pm.response.code === 200) {",
              "  var json = pm.response.json();",
              "  pm.test('Title updated', function () { pm.expect(json.title).to.eql('Updated'); });",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "response": []
    },
    {
      "name": "Delete Item (protected)",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/items/1",
          "host": ["{{baseUrl}}"],
          "path": ["items","1"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 204 or 404', function () {",
              "  pm.expect([204, 404]).to.include(pm.response.code);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "jwt",
      "value": "",
      "type": "string"
    }
  ]
}
